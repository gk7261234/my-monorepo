{
  "compilerOptions": {
    "module": "es2015",
    "target": "es5",
    "lib": ["esnext", "dom"],
    "baseUrl": "./packages",
    "paths": {
      "@mo-demo/*": ["*/src"]
    },
    "moduleResolution": "node"
  },
  "references": [
    {
      "path": "./packages/cli"
